<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="CourseCardView" parent="CardView">
    <item name="android:background">@color/greyLight</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:layout_marginTop">@dimen/card_top</item>
    <item name="android:layout_marginBottom">@dimen/card_bottom</item>
    <item name="android:layout_marginLeft">@dimen/card_side</item>
    <item name="android:layout_marginRight">@dimen/card_side</item>
    <item name="cardCornerRadius">@dimen/card_radius</item>
    <item name="cardElevation">@dimen/card_elevation</item>
  </style>

  <style name="CourseCardText">
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="CourseCardText.Title" parent="CourseCardText">
    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textStyle">bold</item>
    <item name="android:maxLines">2</item>
  </style>

  <style name="CourseCardText.Sub" parent="CourseCardText">
    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:textColor">@color/greyDark</item>
  </style>

</resources>
